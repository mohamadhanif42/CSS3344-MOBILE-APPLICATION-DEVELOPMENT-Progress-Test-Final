<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ProgressTest.VanGoghProfilePage"
             BackgroundColor="#121212">

    <!-- Tip D: Use CollectionView for the main structure so everything scrolls together -->
    <CollectionView ItemsSource="{Binding Artworks}"
                    SelectionMode="None">

        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="15" VerticalItemSpacing="15"/>
        </CollectionView.ItemsLayout>

        <!-- HEADER: Profile Info & Stats -->
        <CollectionView.Header>
            <VerticalStackLayout Padding="20,10,20,20" Spacing="15">

                <!-- Navigation Bar Mockup -->
                <Grid ColumnDefinitions="Auto, *, Auto">
                    <Label Text="&#60;" TextColor="Gray" FontSize="24" VerticalOptions="Center"/>
                    <Label Text="Op..." TextColor="Gray" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <HorizontalStackLayout Grid.Column="2" Spacing="15">
                        <Label Text="&#128278;" TextColor="Gray" FontSize="20"/>
                        <!-- Bookmark Icon Mock -->
                        <Label Text="&#8942;" TextColor="Gray" FontSize="20"/>
                        <!-- Dots Icon Mock -->
                    </HorizontalStackLayout>
                </Grid>

                <!-- Tip A: Rounded profile picture with color border -->
                <Border Stroke="#FFA500"
                        StrokeThickness="2"
                        HeightRequest="100"
                        WidthRequest="100"
                        HorizontalOptions="Center"
                        StrokeShape="RoundRectangle 50">
                    <Image Source="vincent.jpg"
                           Aspect="AspectFill"/>
                </Border>

                <!-- Name and Title -->
                <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Label Text="Vincent van Gogh"
                           TextColor="White"
                           FontSize="28"
                           FontAttributes="Bold"
                           FontFamily="Serif"
                           HorizontalOptions="Center"/>
                    <Label Text="Dutch, 1853 â€“ 1890"
                           TextColor="Gray"
                           FontSize="14"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Tip B: Expandable labels with tail truncation (Expander) -->
                <VerticalStackLayout>
                    <Label Text="Was a Dutch Post-Impressionist painter who is among the most famous and influential figures in the history of Western art."
                           TextColor="#DDDDDD"
                           FontSize="14"
                           LineHeight="1.2"/>

                    <toolkit:Expander>
                        <toolkit:Expander.Header>
                            <!-- The Trigger -->
                            <Label Text="Read More"
                                   TextColor="#FF8C00"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   HorizontalOptions="End"/>
                        </toolkit:Expander.Header>
                        <toolkit:Expander.Content>
                            <!-- The Hidden Content -->
                            <Label Text="In just over a decade, he created about 2,100 artworks, including around 860 oil paintings, most of which date from the last two years of his life. They include landscapes, still lifes, portraits and self-portraits, and are characterised by bold colours and dramatic, impulsive and expressive brushwork that contributed to the foundations of modern art."
                                   TextColor="#DDDDDD"
                                   FontSize="14"
                                   LineHeight="1.2"
                                   Margin="0,5,0,0"/>
                        </toolkit:Expander.Content>
                    </toolkit:Expander>
                </VerticalStackLayout>

                <!-- Divider -->
                <BoxView HeightRequest="1" Color="#333333" Margin="0,10"/>

                <!-- Tip C: Grid with equal width using * -->
                <Grid ColumnDefinitions="*, *, *, *" RowDefinitions="Auto, Auto">
                    <!-- Row 0: Values -->
                    <Label Grid.Column="0" Text="$7.5m" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="1" Text="$3.5m" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="2" Text="+598%" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="3" Text="12"    TextColor="White" FontAttributes="Bold" HorizontalOptions="Center"/>

                    <!-- Row 1: Labels -->
                    <Label Grid.Row="1" Grid.Column="0" Text="Record"  TextColor="Gray" FontSize="12" HorizontalOptions="Center"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="Average" TextColor="Gray" FontSize="12" HorizontalOptions="Center"/>
                    <Label Grid.Row="1" Grid.Column="2" Text="General" TextColor="Gray" FontSize="12" HorizontalOptions="Center"/>
                    <Label Grid.Row="1" Grid.Column="3" Text="Items"   TextColor="Gray" FontSize="12" HorizontalOptions="Center"/>
                </Grid>

                <!-- Divider -->
                <BoxView HeightRequest="1" Color="#333333" Margin="0,10"/>

                <Label Text="Other Van Gogh Works" TextColor="White" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </CollectionView.Header>

        <!-- Gallery Item Template -->
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Spacing="8">
                    <Frame CornerRadius="10"
                           Padding="0"
                           IsClippedToBounds="True"
                           HeightRequest="180"
                           HasShadow="False"
                           BorderColor="Transparent"
                           BackgroundColor="#222222">
                        <Image Source="{Binding ImageUrl}"
                               Aspect="AspectFill"
                               HeightRequest="180"
                               WidthRequest="180"/>
                    </Frame>
                    <Label Text="{Binding Title}" TextColor="White" FontSize="14" LineBreakMode="TailTruncation"/>
                    <Label Text="{Binding Price}" TextColor="Gray" FontSize="12"/>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>
</ContentPage>